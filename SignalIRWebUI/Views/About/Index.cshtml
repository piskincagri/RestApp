@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımızda Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Hakkımızda ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                   
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Açıklama1</th>
                                    <th scope="col">Açıklama2</th>
                                    <th scope="col">Açıklama3</th>
                                    <th scope="col">Açıklama4</th>
                                    <th scope="col">Açıklama5</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                     
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Description1</td>
                                        <td>@item.Description2</td>
                                        <td>@item.Description3</td>
                                        <td>@item.Description4</td>
                                        <td>@item.Description5</td>
                                        <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger btn-border btn-round">Sil</a></td>
                                        <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-success btn-border btn-round">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/About/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkımızda Girişi</a>
                    </div>
                </div>


            </div>



        </div>
    </div>
</div>





