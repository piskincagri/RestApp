@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayoutController/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Müşteri Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Müşteri Yorum EklemeSayfası</div>
                        </div>
                        <div class="card-body">

                            <div class="form-group">
                                <label for="Name">Müşteri Adı Soyadı</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name" />

                            </div>


                        </div>
                        <div class="card-body">

                            <div class="form-group">
                                <label for="Title">Referans Ünvanı</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title" />

                            </div>


                        </div>
                        <div class="card-body">

                            <div class="form-group">
                                <label for="Comment">Referans Yazısı</label>
                                <input type="text" class="form-control" asp-for="Comment" id="Comment" />

                            </div>


                        </div>
                        <div class="card-body">

                            <div class="form-group">
                                <label for="ImageURL">Referans Veren Foto</label>
                                <input type="text" class="form-control" asp-for="ImageURL" id="ImageURL" />

                            </div>


                        </div>
                        
                        <div class="card-action">
                            <button class="btn btn-primary btn-border btn-round">Referans Yorum Kaydet</button>

                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>





