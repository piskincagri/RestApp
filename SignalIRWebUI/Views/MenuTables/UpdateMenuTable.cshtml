@model UpdateMenuTableDto
@{
    ViewData["Title"] = "UpdateMenuTable";
    Layout = "~/Views/AdminLayoutController/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Masa Güncelleme İşlemleri</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="MenuTableID" />
                            <div class="form-group">
                                <label for="categoryname">Masa Adı</label>
                                <input type="text" class="form-control" asp-for="Name" id="name" />

                            </div>


                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary btn-border btn-round">Masa Güncelle</button>

                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>






