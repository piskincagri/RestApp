@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mail Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Mail Gönderme Paneli</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ReciverMail">Alıcı Mail Adresi</label>
                                <input type="text" class="form-control" asp-for="ReciverMail" id="ReciverMail" placeholder="Alıcı mail adresini giriniz" />
                            </div>
                            <div class="form-group">
                                <label for="Subject">Konu</label>
                                <input type="text" class="form-control" asp-for="Subject" id="Subject" placeholder="Mail başlığını giriniz" />

                            </div>
                            <div class="form-group">
                                <label for="Body">Mesajınız</label>
                                <textarea rows="5" asp-for="Body" id="Body" class="form-control" placeholder="Mesajınızı giriniz"></textarea>

                            </div>
                           
                          
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary btn-border btn-round">Rezervasyon Mailini Gönder</button>

                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>






