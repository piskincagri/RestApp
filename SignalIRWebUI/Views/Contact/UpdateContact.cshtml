@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayoutController/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Güncelleme İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İletişim Güncelleme Girişi</div>
                        </div>
                        <input type="hidden" asp-for="ContactID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Lokasyon</label>
                                <input type="text" class="form-control" asp-for="Location" id="title" />

                            </div>


                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="phone">Telefon</label>
                                <input type="text" class="form-control" asp-for="Phone" id="phone" />

                            </div>


                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="mail">Mail Adresi</label>
                                <input type="email" rows="5" class="form-control" asp-for="Mail" id="mail">

                            </div>


                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Alt Başlık</label>
                                <input type="text" class="form-control" asp-for="FooterTitle" id="title">

                            </div>


                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="days">Açık Günler</label>
                                <input type="text" class="form-control" asp-for="OpenDays" id="days">

                            </div>


                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="daysdescription">Açık Günler Açıklama</label>
                                <input type="text" class="form-control" asp-for="OpenDaysDescription" id="daysdescription">

                            </div>


                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="openhours">Açık Saatler</label>
                                <input type="text" class="form-control" asp-for="OpenHours" id="openhours">

                            </div>


                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="footerdesription">Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="FooterDescription" id="footerdesription"></textarea>

                            </div>


                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary btn-border btn-round">İletişim Bilgileri Güncelle</button>

                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
